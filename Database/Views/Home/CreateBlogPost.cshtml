@using Database.Models
@model BlogPost

@{
    ViewData["Title"] = "Create Blog Post";
    var bloglist = (IEnumerable<SelectListItem>)ViewData["BlogList"];
}

<form method="post">
    <div>
        <label asp-for="Blog.BlogId"></label>
        <select asp-for="Blog.BlogId" asp-items="bloglist"></select>
        <span asp-validation-for="Blog.BlogId" />
    </div>
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" />
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description" />
    </div>
    <div>
        <label asp-for="Content"></label>
        <input asp-for="Content" />
        <span asp-validation-for="Content" />
    </div>
    <div>
        <input type="submit" value="create" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

